<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>KnifeZ's .NET5 Frameowrk</Description>
    <Version>0.1.3</Version>
    <PackageIcon>icon.png</PackageIcon>
    <RepositoryUrl>https://gitee.com/KnifeZ/KnifeZ.Virgo</RepositoryUrl>
    <PackageTags>knifez,mvvm,.net5</PackageTags>
    <NeutralLanguage>zh-CN</NeutralLanguage>
    <Authors>KnifeZ</Authors>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Controllers\**" />
    <Compile Remove="GeneratorFiles\**" />
    <EmbeddedResource Remove="Controllers\**" />
    <EmbeddedResource Remove="GeneratorFiles\**" />
    <None Remove="Controllers\**" />
    <None Remove="GeneratorFiles\**" />
    <None Include="../../">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\KnifeZ.Virgo.Core\Resources\icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Program.cs" />
    <Compile Remove="_CodeGenController.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Areas\templates\BatchVM.txt" />
    <None Remove="Areas\templates\Controller.txt" />
    <None Remove="Areas\templates\CurdVM.txt" />
    <None Remove="Areas\templates\ImportVM.txt" />
    <None Remove="Areas\templates\ListVM.txt" />
    <None Remove="Areas\templates\Searcher.txt" />
    <None Remove="Areas\templates\vue\api\index.txt" />
    <None Remove="Areas\templates\vue\index.txt" />
    <None Remove="Areas\templates\vue\views\dialog-form.txt" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Areas\templates\Searcher.txt" />
    <EmbeddedResource Include="Areas\templates\vue\api\index.txt" />
    <EmbeddedResource Include="Areas\templates\vue\index.txt" />
    <EmbeddedResource Include="Areas\templates\vue\views\dialog-form.txt" />
    <EmbeddedResource Include="Program.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="5.0.2" />
    <PackageReference Include="Microsoft.AspNetCore.SpaServices.Extensions" Version="5.0.2" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="5.6.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\KnifeZ.Virgo.Core\KnifeZ.Virgo.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Areas\templates\Controller.txt" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Areas\templates\BatchVM.txt" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Areas\templates\CurdVM.txt" />
    <EmbeddedResource Include="Areas\templates\ImportVM.txt" />
    <EmbeddedResource Include="Areas\templates\ListVM.txt" />
  </ItemGroup>

</Project>
